<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.common.springbootv1.mapper.UserMapper">
    <select id="findAll" resultType="com.study.common.springbootv1.domain.User">
        SELECT * FROM USER
    </select>

    <select id="findByUid" resultType="com.study.common.springbootv1.domain.User">
        SELECT * FROM USER
        WHERE UID = #{uid}
    </select>

    <insert id="save" parameterType="com.study.common.springbootv1.domain.User">
        INSERT INTO
            USER
        (
         UID,
         NAME,
         PASSWORD
        )
        VALUES
           (
            #{uid},
            #{name},
            #{password}
            )
    </insert>

</mapper>